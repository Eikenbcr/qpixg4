# set verbosity
/control/verbose 1
/run/verbose 1
/tracking/verbose 0

# output path
/Inputs/root_output ./output/Output.root

# configure ROOT
/Inputs/Particle_Type ROOT
/Inputs/ReadFrom_Root_Path cfg/Beam_Neutrino_FHC_0.root
/Inputs/vertex_x 1.15 m
/Inputs/vertex_y 3.0 m
/Inputs/vertex_z 1.8 m


# initialize run
/run/initialize
/random/setSeeds 0 31

# limit radioactive decays
/grdm/nucleusLimits 1 35 1 17  # aMin aMax zMin zMax

# run
/run/beamOn 5
