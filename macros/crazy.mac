# set verbosity
/control/verbose 1
/run/verbose 1
/tracking/verbose 0

# configure marley
/Inputs/Particle_Type soup

# output path
/Inputs/root_output ../output/crazy.root

# initialize run
/run/initialize
/random/setSeeds 0 31

# Supernova configs
/Supernova/Event_Window 10 s
/Supernova/Event_Cutoff 10 s

/Supernova/N_Am241_Decays 1

# run
/run/beamOn 5000

